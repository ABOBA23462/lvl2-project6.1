<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70.44dp"
        android:layout_marginStart="20.55dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70.33dp"
        android:layout_marginEnd="30.33dp"/>

    <ImageView
        android:id="@+id/spot"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/rounder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/bicycle"
        android:layout_width="305.76dp"
        android:layout_height="226dp"
        android:background="@drawable/bicycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="337dp"/>


    <TextView
        android:id="@+id/bicycle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bicycle"
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/bicycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="103dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="108dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tab"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="186dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"
        android:layout_marginTop="11dp"
        android:layout_marginStart="79dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"
        app:layout_constraintEnd_toEndOf="@id/tab"
        android:layout_marginEnd="15dp"
        android:textColor="@color/super_blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        app:layout_constraintTop_toTopOf="@id/tab"
        app:layout_constraintStart_toStartOf="@id/tab"
        android:layout_marginStart="15dp"
        android:textColor="@color/super_blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>